@model TARpe22ShopLemming.Models.Car.CarDetailsViewModel
<h1>Details</h1>

<div>
    <dl class="row">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div class="form-group row">
            <label asp-for="Mark" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Mark)
        </div>
        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Model)
        </div>
        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Year)
        </div>
        <div class="form-group row">
            <label asp-for="HorsePower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.HorsePower)
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>

        @foreach (var images in Model.CarFileToApiViewModels)
        {
            <partial name="_Images" model="images" />
        }
    </dl>
    <a asp-action="index" asp-controller="Cars" class="btn btn-primary">Cancel</a>
</div>